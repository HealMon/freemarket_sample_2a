.global
  = render 'shared/global-header'


  // コンテンツスライダー
  .top-image-slider
    = link_to '#' do
      = image_tag 'top-page-slider-image.png', class: 'slider-image'

  // 人気のカテゴリ
  .popular-category
    %h2 人気のカテゴリー
    .popular-category__list-box
      %ul
        %li.popular-category__list-box__list
          = link_to 'レディース', '#'
        %li.popular-category__list-box__list
          = link_to 'メンズ', '#'
        %li.popular-category__list-box__list
          = link_to '家電・スマホ・カメラ', '#'
        %li.popular-category__list-box__list
          = link_to 'おもちゃ・ホビー・グッズ', '#'

  .item-container-category
    // レディース新着
    .item-container-category.ladies
      .item-container-category__header
        %h3 レディース新着アイテム
        = link_to 'もっと見る　＞', '#'
      .item-container-category__content
        .item-container-category__content__cards
          - @items_lady.each do |item|
            %div
              = link_to '#', class: 'style_link' do
                %figure.style_card
                  .style_thumbnail
                    %span=item.price.to_s(:currency,format: '¥ %n')
                    = image_tag item.images[0]
                  %figcaption
                    %span=item.name
                
    .item-container-category.mens
      .item-container-category__header
        %h3 メンズ新着アイテム
        = link_to 'もっと見る　＞', '#'
      .item-container-category__content
        .item-container-category__content__cards
          - @items_men.each do |item|
            %div
              = link_to '#', class: 'style_link' do
                %figure.style_card
                  .style_thumbnail
                    %span=item.price.to_s(:currency,format: '¥ %n')
                    = image_tag item.images[0]
                  %figcaption
                    %span=item.name

    .item-container-category.interia
      .item-container-category__header
        %h3 家具　キッチン道具　ベッド
        = link_to 'もっと見る　＞', '#'
      .item-container-category__content
        .item-container-category__content__cards
          - @items_interia.each do |item|
            %div
              = link_to '#', class: 'style_link' do
                %figure.style_card
                  .style_thumbnail
                    %span=item.price.to_s(:currency,format: '¥ %n')
                    = image_tag item.images[0]
                  %figcaption
                    %span=item.name

  = render 'shared/global-footer'