.container.global
  = render './shared/global-header'
  = render './shared/bread-crumbs'

  // メインコンテンツエリア
  %main.main-container
    .content
      %section.mypage-user-icon
        = link_to '#' do
          %figure
            = image_tag 'member_photo_noimage_thumb.png'
          %h2.bold テスト太郎
          .mypage-number
            %div
              評価
              %span.bold 0
            %div
              出品数
              %span.bold 0
      %section.mypage-tab-container-notification-todo
        %ul.mypage-tabs
          %li.active
            %h3
              = link_to '#' do
                お知らせ
          %li
            %h3
              = link_to '#' do
                やることリスト
        .tab-content
          %ul#mypage-tab-notification.mypage-item-list.tab-pane.active
            %li
              = link_to '#', class: 'mypage-item-link' do
                %figure
                  = image_tag 'mercari_profile.png'
                .mypage-item-body
                  .mypage-item-text 事務局から個別メッセージ「ログイン通知」
                  %time
                    = fa_icon 'history'
                    %span 17 分前
                = fa_icon 'chevron-right', class: 'icon-arrow-right'
            %li
              = link_to '#', class: 'mypage-item-link' do
                %figure
                  = image_tag 'mercari_profile.png'
                .mypage-item-body
                  .mypage-item-text 《速報》今なら販売手数料が実質無料！出品が超お得♪
                  %time
                    = fa_icon 'history'
                    %span 3 日前
                = fa_icon 'chevron-right', class: 'icon-arrow-right'
            %li
              = link_to '#', class: 'mypage-item-link' do
                %figure
                  = image_tag 'mercari_profile.png'
                .mypage-item-body
                  .mypage-item-text 《今なら販売手数料実質無料！》詳しくはこちらから♪
                  %time
                    = fa_icon 'history'
                    %span 5 日前
                = fa_icon 'chevron-right', class: 'icon-arrow-right'
            %li
              = link_to '#', class: 'mypage-item-link' do
                %figure
                  = image_tag 'mercari_profile.png'
                .mypage-item-body
                  .mypage-item-text 事務局から個別メッセージ「全国のセブン-イレブンでメルカリの梱包資材販売がスタートします♪」
                  %time
                    = fa_icon 'history'
                    %span 6 日前
                = fa_icon 'chevron-right', class: 'icon-arrow-right'
            %li
              = link_to '#', class: 'mypage-item-link' do
                %figure
                  = image_tag 'mercari_profile.png'
                .mypage-item-body
                  .mypage-item-text 事務局から個別メッセージ「ログイン通知」
                  %time
                    = fa_icon 'history'
                    %span 7 日前
                = fa_icon 'chevron-right', class: 'icon-arrow-right'
            %li.mypage-go-list
              = link_to '一覧を見る', '#'


      // メインコンテンツ bottom
      %section.mypage-tab-container
        %h2.mypage-tab-head 購入した商品
        %ul.mypage-tabs
          %li.active
            %h3
              = link_to '取引中', '#'
          %li
            %h3
              = link_to '過去の取引', '#'
        .tab-content
          %ul#mypage-tab-transaction-now.mypage-item-list.tab-pane.active
            %li.mypage-item-not-found.bold 取引中の商品がありません

    // サイドメニュー
    = render './shared/mypage-sidebar'
  // フッター
  = render './shared/global-footer'
