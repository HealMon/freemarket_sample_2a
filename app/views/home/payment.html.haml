.container
  %header.header
    %h1
      = link_to "" do
        = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3054050720"
  
    -#header bar
    %nav.signup-bar
      %oi.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status

  %main.main
    %section.container-main
      %h2.container-main__head
        電話番号の確認
      %hr
      %form.new_user(action="")
        .container-main__inner__content
          .form-group
            .field
              %label(name="phone_number") カード番号
              %span.form-group--require 必須
              %input(type="number"  placeholder="半角数字のみ" class="input-default")/
              = image_tag 'card-brand-list', height: '25'
          .form-group
            .field
              %label(name="phone_number") 有効期限
              %span.form-group--require 必須
              %br/
              .select-wrap.card
                %select.month(name="")
                月
                %select.year(name="")
                日
          .form-group
            .field
              %label(name="phone_number") セキュリティコード
              %span.form-group--require 必須
              %input(type="number"  placeholder="カード背面4桁もしくは3桁の番号" class="input-default")/
              %p.container-main__text-right
                %a{href:"https://www.mercari.com/jp/help_center/article/423/"}
                  = fa_icon 'question-circle'
                  カード裏面の番号とは？
        .container-main__inner__content.pt-5
          .form-group
            %button.btn-default.btn-red{type: "submit"} 次へ進む
            .form-group.text-right
