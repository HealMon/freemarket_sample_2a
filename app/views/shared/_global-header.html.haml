%header.header.global
  .header-inner
    .header-inner__top
      %h1.logo
        =link_to root_path do
          = image_tag 'logo', class: 'logo'
      %form.header-inner__top__search-form
        %input.input-default{name: "keyword", placeholder: "何かお探しですか？", type: "search"}/
        = fa_icon 'search'
    .header-inner__nav-box
      %nav.header-inner__nav-box--left
        %ul
          %li
            %h2
              %a.pc-header-nav-root.list-parent{href: "#"}
                = fa_icon 'list', class: 'pc-header-brand-icon'
                %span カテゴリーから探す
          %li
            %h2
              %a.pc-header-nav-root.list-parent{href: "#"}
                = fa_icon 'tag', class: 'pc-header-brand-icon'
                %span ブランドから探す

      .header-inner__nav-box--right
        %ul.header-inner__nav-box--right__user-nav
          %li
            %a.menu-link{href: "#"}
              = fa_icon 'heart'
              %span いいね！一覧
          %li
            %a.menu-link{href: "#"}
              = fa_icon 'bell'
              %span お知らせ
            %ul
          %li
            %a.menu-link{href: "#"}
              = fa_icon 'check'
              %span やることリスト
            %ul
          %li
            %a.menu-link{href: "#"}
              = fa_icon 'user'
              %span マイページ