.container
  %header.header
    %h1
      = link_to root_path do
        - if session[:tosaben] == "true"
          = image_tag 'tosaben-logo.png', class: 'logo tosaben-logo'
        - else
          = image_tag 'logo.png', class: 'logo'
    %nav.signup-bar
      %oi.clearfix
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証
          .progress-status
        %li.through
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status

  %main.main
    %section.container-main
      %h2.container-main__head
        支払い方法
      %hr  
      = form_tag(signup_create_signup_index_path, method: :post, id: 'card_form',  name: "inputForm", class: 'new_user') do
        .container-main__inner__content
          .form-group
            .field
              %label カード番号
              %span.form-group--require 必須
              %input(type="text-field" id="card_number" class="input-default" placeholder="半角数字のみ")/
              = image_tag 'card-brand-list.png', height: '25'
          .form-group
            .field
              %label 有効期限
              %span.form-group--require 必須
              %br/
              .select-wrap
                %select(type="text" id="card_year" class="year")
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %label 年
                %select(type="text" id="card_month" class="month")
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12               
                %label 月
          .form-group
            .field
              %label セキュリティコード
              %span.form-group--require 必須
              %input(type="text_field" id="card_cvc" class="input-default" placeholder= "カード背面4桁もしくは3桁の番号")/  
              %p.container-main__text-right
                %a{href:"https://www.mercari.com/jp/help_center/article/423/"}
                  = fa_icon 'question-circle'
                  カード裏面の番号とは？
        .container-main__inner__content.pt-5
          .form-group
            %button.btn-default.btn-red(type="submit" id="card_btn") 次へ進む
            .form-group.text-right
      = render 'devise/shared/footer'